{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "baseUrl": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "paths": {
      "@/*": ["./src/"] //alias para import
    } 
}